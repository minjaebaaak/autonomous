# AEGIS Protocol - pnpm 최적 설정 (v3.1)

# TensorFlow.js 등 호환성을 위한 hoisting
shamefully-hoist=true

# peer dependencies 자동 설치
auto-install-peers=true

# peer dependencies 엄격 모드 비활성화 (--legacy-peer-deps 대체)
strict-peer-dependencies=false

# engine 요구사항 엄격 적용
engine-strict=true

# 프로덕션 안정성: lockfile 변경 방지
prefer-frozen-lockfile=true

# 로그 레벨
loglevel=warn
